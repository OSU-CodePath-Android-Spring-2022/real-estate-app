<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp">

    <ImageView
        android:id="@+id/ivListingPhotoW"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvPriceW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="$300,000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivListingPhotoW" />

    <TextView
        android:id="@+id/tvBedCountW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        tools:text="2 bds"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvPriceW"
        app:layout_constraintTop_toBottomOf="@+id/ivListingPhotoW" />

    <TextView
        android:id="@+id/tvBathCountW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        tools:text="2 ba"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvBedCountW"
        app:layout_constraintTop_toBottomOf="@+id/ivListingPhotoW" />

    <TextView
        android:id="@+id/tvSqFtW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        tools:text="2000 sqft"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvBathCountW"
        app:layout_constraintTop_toBottomOf="@+id/ivListingPhotoW" />

    <TextView
        android:id="@+id/tvAddressW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        tools:text="622 James Avenue, Madison, NY"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceW" />

    <TextView
        android:id="@+id/pipeChar1W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/pipe_char"
        android:textSize="30sp"
        android:textColor="#D3D3D3"
        app:layout_constraintLeft_toRightOf="@+id/tvBedCountW"
        app:layout_constraintRight_toLeftOf="@+id/tvBathCountW"
        app:layout_constraintTop_toBottomOf="@+id/ivListingPhotoW" />

    <TextView
        android:id="@+id/pipeChar2W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/pipe_char"
        android:textSize="30sp"
        android:textColor="#D3D3D3"
        app:layout_constraintLeft_toRightOf="@+id/tvBathCountW"
        app:layout_constraintRight_toLeftOf="@+id/tvSqFtW"
        app:layout_constraintTop_toBottomOf="@+id/ivListingPhotoW" />

    <Button
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>